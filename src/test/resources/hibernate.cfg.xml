<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:todolist</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sa</property>
        <!--suppress CheckTagEmptyBody -->
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="ru/job4j/hello/models/User.hbm.xml"/>
        <mapping resource="ru/job4j/todolist/models/Item.hbm.xml"/>
        <mapping resource="ru/job4j/carsplace/models/Engine.hbm.xml"/>
        <mapping class="ru.job4j.carsplace.models.Car"/>
        <mapping class="ru.job4j.carsplace.models.Driver"/>
        <mapping resource="ru/job4j/carsplace/models/Maker.hbm.xml"/>
        <mapping resource="ru/job4j/carsplace/models/Model.hbm.xml"/>
        <mapping resource="ru/job4j/carsplace/models/Generation.hbm.xml"/>
        <mapping resource="ru/job4j/carsplace/models/Body.hbm.xml"/>
        <mapping class="ru.job4j.carsplace.models.Drive"/>
        <mapping class="ru.job4j.carsplace.models.Doors"/>
        <mapping class="ru.job4j.carsplace.models.BodyName"/>
        <mapping class="ru.job4j.carsplace.models.GearBox"/>
        <mapping resource="ru/job4j/carsplace/models/Add.hbm.xml"/>
        <mapping class="ru.job4j.carsplace.models.Photo"/>
    </session-factory>
</hibernate-configuration>
